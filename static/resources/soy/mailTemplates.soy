{namespace wat.soy.mail}

/**
 * Template to create new mail overview items.
 *
 * @param DomID
 * @param IsFromToday
 * @param Seen
 * @param ShortSubject
 * @param ShortFrom
 * @param DateString
 * @param TimeString
 */
{template .mailOverviewItem}
    <div id={$DomID} class="row">
        <div class="col-md-12">
            <div class="row entry {if not $Seen} newMail {/if}">
                <div class="col-md-9 content">
                    <div class="subject">
                        <div>{$ShortSubject}</div>
                    </div>
                    <div class="from">
                        <div>{$ShortFrom}</div>
                    </div>
                </div>
                <div class="col-md-3 date">
                    <div class="time">{$TimeString}</div>
                    <div class="cal">{if $IsFromToday} Today {else} {$DateString} {/if}</div>
                </div>
            </div>
            <div class="row">
                <hr class="mail-separator">
            </div>
        </div>
    </div>
{/template}

/**
 * Template to create new mail reply items.
 *
 * @param DomID
 * @param ShortenedTo
 */
{template .newMailWindowItem}
    <div id="{$DomID}" class="col-md-12 mail-window-item">
        <div class="newmail-content">
            <span class="glyphicon glyphicon-remove-sign newMail-close-btn" aria-hidden="true"></span>
            <div class="row header">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-1">From:</div>
                        <div id="mailDetails_From" class="col-md-11">
                            hansmueller@foobar.com
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-1">Subject:</div>
                        <div id="mailDetails_Subject" class="col-md-11">
                            TestMail to show how it looks on huge subjects
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-1">To:</div>
                        <div id="mailDetails_To" class="col-md-11">
                            {$ShortenedTo}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{/template}

/**
 * Template to create new mail reply items.
 *
 * @param DomID
 * @param ShortenedTo
 */
{template .newMailBarItem}
    <div id="{$DomID}" class="mail-window-bar-item">
        <div>{$ShortenedTo}</div>
    </div>
{/template}
